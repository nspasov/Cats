@model List<Dogs.Entities.Dog>
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <a href="/Home/Edit">New</a>
        <table>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Type</td>
                <td>Age</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Type</td>
                    <td>@item.Age</td>
                    <td>
                        <a href="/Home/Edit?id=@item.Id">edit</a>
                        <a href="/Home/Delete?id=@item.Id">delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>